{% extends "base.html.twig" %}

{% block content %}
    <div class="wrapper">
        {#<div class="page-header page-header-xs" data-parallax="true" style="background-image: url('{{ asset('assets/img/fabio-mangione.jpg') }}');">#}
            {#<div class="filter"></div>#}
        {#</div>#}
        <div class="section profile-content" style="margin-top: 100px">
            <div class="container">
                <div class="owner">
                    <div class="avatar">
                        <img src="/{{ user.avatar }}" alt="Circle Image" class="img-circle img-no-padding img-responsive">
                    </div>
                    <div class="name">
                        <h4 class="title">{{ user.username }}<br/></h4>
                        <h6 class="description">About</h6>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 offset-md-3 text-center">
                        {% if user.about is empty  %}
                            <p>No Description.</p>
                        {% else %}
                            <p>{{ user.about|md2html }}</p>
                        {% endif %}
                        <br />
                        {% if me %}
                            <div class="text-center"><a href="{{ path('my_profile_show') }}" class="btn btn-warning btn-round"><i class="fa fa-edit"></i> Update Profile</a></div>
                        {% endif %}
                        {#<btn class="btn btn-outline-default btn-round"><i class="fa fa-flag"></i> Report</btn>#}
                    </div>
                </div>
                <br/>
                <div class="nav-tabs-navigation">
                    <div class="nav-tabs-wrapper">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#follows" role="tab">Reviews</a>
                            </li>
                            {#<li class="nav-item">#}
                                {#<a class="nav-link" data-toggle="tab" href="#following" role="tab">Reports</a>#}
                            {#</li>#}
                        </ul>
                    </div>
                </div>
                <!-- Tab panes -->
                <div class="tab-content following">
                    <div class="tab-pane active" id="follows" role="tabpanel">
                        <div class="row">
                            <div class="col-md-6 offset-md-3">
                                {# REVIEWS #}
                                {% include 'profile/_reviews.html.twig' %}
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane text-center" id="following" role="tabpanel">
                        <h3 class="text-muted">No reports :)</h3>

                        {#<button class="btn btn-warning btn-round">Find artists</button>#}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
