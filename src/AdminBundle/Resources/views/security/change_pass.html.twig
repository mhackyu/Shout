{% extends "AdminBundle::base.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-md-6 offset-3 mt-5 mb-5">
            <legend>Change Password</legend>
            {% form_theme form 'bootstrap_3_layout.html.twig' %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary" onClick="{return validate();}"><i class="fa fa-pencil-square-o"></i> Update Password</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block js %}
<script language='JavaScript'>
    function validate()
    {
      conf = confirm("Are you sure you want to save changes?");
      if (conf)
        return true;
      else
          return false;
    }
  </script>
{% endblock %}
