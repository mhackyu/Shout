{% extends "AdminBundle::base.html.twig" %}

{% block title %}AdminBundle:Quotes:list{% endblock %}

{% block content %}
<div class="container-fluid">
   <div class="card card-map">
		<div class="header">
            <h4 class="title">Quote Management <div class="pull-right">
            <a href="{{path('admin_quotes_new')}}"><button class="btn btn-success">Add Quote <span class="ti-plus"></span></button></a></div></h4>
            <p class="category">Quotes randomly posted</p>
       </div>

	<div class="content table-responsive table-full-width">
		<table class="table table-striped">	
			<thead>
			<th>CATEGORY ID</th>
			<th>CONTENT</th>
			<th>QUOTATOR</th>
			</thead>

			<tbody>
				{% for quote in quotes %}
				<tr>
				<td> {{quote.id}} </td>
				<td> {{quote.content}} </td>
				<td> {{quote.quoteBy}} </td>
				<td><a href="{{ path('admin_quotes_edit', {id:quote.id} ) }} ">
				<button class="btn btn-info"><span class="ti-pencil"></span></button></a>

				<a href="{{ path('admin_quotes_delete', {id:quote.id} ) }} ">
				<button class="btn btn-danger"><span class="ti-trash"></span></button></a>
				</td>
				
				{% endfor %}
				</tr>
			</tbody>
		</table>
	</div>
	</div>
</div>


{% endblock %}


{% block js %}
<script> 
	$('#nav-quote').addClass('active');
</script>
{% endblock %}
