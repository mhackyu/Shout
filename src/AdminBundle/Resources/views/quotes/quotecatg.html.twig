{% extends "AdminBundle::base.html.twig" %}

{% block title %}Quotes' List{% endblock %}
{% block header %}Manage Quote Category{% endblock %}

{% block content %}
<div class="container-fluid">
   <div class="card card-map">
        <div class="header">
            <h4 class="title">Quote Category Management <div class="pull-right">
            <a href="{{path('admin_quotecatg_new')}}"><button class="btn btn-success">Add CATEGORY <span class="ti-plus"></span></button></a></div></h4>
            <p class="category">Add, edit and delete categories of quotes</p>

            <div class="pull-left"> 
                            <form class="navbar-form" role="search">
                                 <div class="input-group add-on">
                                    <input class="form-control" style = "color:black" placeholder="Search" name="search" id="srch-term" type="text">
                                        <div class="input-group-btn">
                                             <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                         </div>
                                </div>
                             </form>
                                {% if app.request.get('search') is not empty %}
                                <i> results for <b> "{{search}}" </b> </i> 
                                {% endif %}
       </div>


    <div class="content table-responsive table-full-width">
        <table class="table table-striped"> 
            <thead>
            <th>ID</th>
            <th>CATEGORY NAME</th>
            </thead>

            <tbody>
                {% for quote_category in quote_category %}
                <tr>
                <td> {{quote_category.id}} </td>
                <td> {{quote_category.name}} </td>
                <td><a href="{{ path('admin_quotecatg_edit', {id:quote_category.id} ) }} ">
                <button class="btn btn-info"><span class="ti-pencil"></span></button></a>

                <a href="{{ path('admin_quotecatg_delete', {id:quote_category.id} ) }} ">
                <button class=" btn btn-danger" onClick="{return validate();}"><span class="ti-trash"></span></button></a>
                </td>

                {% else %}
                        <td><b>No results found</b></td>
                 
                
                {% endfor %}
                </tr>
            </tbody>
        </table>
    </div>
    </div>
</div>


{% endblock %}


{% block js %}
<script> 
    $('#nav-quotecatg').addClass('active');
</script>

<script language='JavaScript'>
    function validate()
    {
      conf = confirm("Are you sure you want to delete quote?");
      if (conf)
        return true;
      else
          return false;
    }
  </script>
  {% endblock %}