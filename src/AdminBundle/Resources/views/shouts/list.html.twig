{% extends "AdminBundle::base.html.twig" %}

{% block title %}Shouts' Lists{% endblock %}
{% block header %}Manage Shouts{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
       <div class="col-md-12">
            <div class="card">
                <div class="header">
                   <h4 class="title">Shouts List</h4>
        <p class="category">shouts can be blocked, delete etc.</p>

                <div class="pull-right"> 
                            <form class="navbar-form" role="search">
                                 <div class="input-group add-on">
                                    <input class="form-control" style = "color:black" placeholder="Search" name="search" id="srch-term" type="text">
                                        <div class="input-group-btn">
                                             <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                         </div>
                                </div>
                             </form>
                            	{% if app.request.get('search') is not empty %}
                                <i> results for <b> "{{search}}" </b> </i> 
                                {% endif %}
                             </div>
                    </div>
    
            <div class="content table-responsive table-full-width">
    	          <table class="table table-hover">
                  <thead> 
                     <th>ID</th>
                     <th>Title</th>
                     <th>Content</th>
                     <th>Date Created</th>
                     <th></th>                                    	  
                    </thead>			
		
       			<tbody>
				{% for shout in shout %}
				<tr>
				<td> {{shout.id}} </td>
				<td> {{shout.title}} </td>
				<td> {{shout.body}} </td>

				<td> {{shout.createdAt|date('M d, Y')}} </td>
				<td> <button class="btn btn-warning" data-toggle="modal" data-target="#myModal">&nbsp;<a href="{{ path('shout_show', {'slug': shout.slug} ) }}">VIEW SHOUT</a></button>
				</td>

				{% else %}
					<td><b>No results found</b></td>
				{% endfor %}
				</tr>
				</tbody>

				</table>
			</div>
		</div>
	</div>
	</div>
</div>


{% endblock %}


{% block js %}
<script> 
	$('#nav-shout').addClass('active');
</script>
{% endblock %}
