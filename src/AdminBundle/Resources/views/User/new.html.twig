{% extends 'AdminBundle::base.html.twig' %}

{% block title %}
	New - User
{% endblock %}

{% block content %}
<div class="row">
{% form_theme form 'bootstrap_3_layout.html.twig' %}
    {{  form_start(form) }}
    {{   form_widget(form) }}
    <button type="submit" class="btn btn-primary" onClick="{return validate();}"> ADD USER</button>
    {{  form_end(form) }}

</div>

{% endblock %}

{% block js %}
<script language='JavaScript'>
    function validate()
    {
      conf = confirm("Are you sure you want to add new user?");
      if (conf)
        return true;
      else
          return false;
    }
  </script>
{% endblock %}
